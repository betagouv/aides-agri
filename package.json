{
  "name": "aides-agri",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.x"
  },
  "scripts": {
    "copy:jquery": "mkdir -p static/vendor/js && cp node_modules/jquery/dist/jquery.min.js static/vendor/js/",
    "build:css": "sass static/css/custom.scss static/vendor/css/custom.min.css --style compressed",
    "build:js": "terser static/js/main.js -o static/vendor/js/main.min.js",
    "build": "npm run copy:jquery && npm run build:css && npm run build:js",
    "watch:css": "sass --watch static/css/custom.scss:static/vendor/css/custom.min.css --style compressed",
    "watch:js": "npm run build:js --watch",
    "watch": "npm run watch:css & npm run watch:js",
    "heroku-postbuild": "npm run build"
  },
  "dependencies": {
    "jquery": "^3.7.1"
  },
  "devDependencies": {
    "sass": "^1.70.0",
    "terser": "^5.27.0"
  }
}